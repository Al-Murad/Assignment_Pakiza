@model IEnumerable<OrderModel>
@if (Model == null)
{
    <h2 class="d-flex justify-content-center mt-6">No Items added</h2>
}
else
{
    var i = 0;
    <h3 class="d-flex justify-content-center">List of Items</h3>
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
                <th>SL</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@(++i)</td>
                    <td>@x.ProductName</td>
                    <td>@x.UnitPrice</td>
                    <td>@x.Quantity</td>
                    <td>@(x.UnitPrice * x.Quantity)</td>
                    <td>
                        <button type="button" class="btn btn-primary btn-sm edit" >Edit</button>
                        <button type="button" class="btn btn-danger btn-sm delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}


